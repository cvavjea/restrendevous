{% extends 'loaderTemplate.html.twig' %}

{% block title %}Prendre|Rende-vous{% endblock %}

{% block main %}

<div class="col-xl-8 col-lg-7">
    <div class="card bg-light text-white shadow mb-4">
        <!-- Card Header - Dropdown -->
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Listes des  Rende-vous</h6>
            <div class="dropdown no-arrow">
                <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
                    <div class="dropdown-header">Dropdown Header:</div>
                </div>
            </div>
        </div>
        <!-- Card Body -->
        <div class="card-body">

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Commissariat</th>
                <th>Agent</th>
                <th>Demandeur</th>
                <th>rende-vous</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for prendre in prendres %}
            <tr>
                <td>{{ prendre.id }}</td>
                <td>{{ prendre.commisariat.nom }}</td>
                <td>{{ prendre.agents.firstName ~' '~    prendre.agents.lastName }}</td>
                <td>{{ prendre.demandeurs.firstName ~' '~    prendre.demandeurs.lastName }}</td>
                <td>{{ prendre.dateredevous ? prendre.dateredevous|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="btn btn-danger" href="{{ path('prendre_show', {'id': prendre.id}) }}"><i class="fa fa-eye"></i> </a>
                    <a class="btn btn-info" href="{{ path('prendre_edit', {'id': prendre.id}) }}"><i class="fa fa-edit"></i> </a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">Aucun enregistrement trouvÃ©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('prendre_new') }}"><i class="fa fa-plus"></i> Ajouter</a>

        </div>
    </div>
</div>
{% endblock %}

