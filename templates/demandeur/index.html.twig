{% extends 'base.html.twig' %}

{% block title %}Demandeur index{% endblock %}

{% block body %}
    <h1>Demandeur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Noms</th>
                <th>DateNaiss</th>
                <th>Tel</th>
                <th>Adresse</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for demandeur in demandeurs %}
            <tr>
                <td>{{ demandeur.id }}</td>
                <td>{{ demandeur.Noms }}</td>
                <td>{{ demandeur.DateNaiss ? demandeur.DateNaiss|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ demandeur.Tel }}</td>
                <td>{{ demandeur.Adresse }}</td>
                <td>
                    <a href="{{ path('demandeur_show', {'id': demandeur.id}) }}">show</a>
                    <a href="{{ path('demandeur_edit', {'id': demandeur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('demandeur_new') }}">Create new</a>
{% endblock %}
